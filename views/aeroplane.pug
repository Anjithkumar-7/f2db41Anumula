extends layout

block content
  h1= title
  - let aeroplane=results
  - let create= `dispatch(\"/aeroplane/create\")`
  button.btn( class="btn-primary ml-1", onclick= create) Create
  div(class="container-fluid")
  div(class="row m-1")
   each c in aeroplane
    - let destination = `dispatch(\"/aeroplane/update?id=${c._id}\")`
    - let d = `dispatch(\"/aeroplane/detail?id=${c._id}\")`
    - let d1 = `dispatch(\"/aeroplane/delete?id=${c._id}\")`
    div(class="row-sm-2" class="m-1") #{c.aer_class}, #{c.aer_fare}, #{c.aer_mem}
      button.btn( class="btn-primary ml-1", onclick= destination) Update
      button.btn( class="btn-primary ml-1", onclick= d) View
      button.btn( class="btn-primary ml-1", onclick= d1) Delete
  script.
    function dispatch(path)
    {
      window.location.href=path
    } 